<Window x:Class="Assignment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3"
        mc:Ignorable="d"
        Title="Temperature Converter" Height="450" Width="800">
    <Grid>
        <Label Content="Input" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250, 15,0 ,0"></Label>
        <TextBox Name="txtBoxInput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300, 20,0,0" Width="200" TextChanged="TxtBoxInput_TextChanged"></TextBox>
        <Label Content="Input Scale" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,60,0,0"  ></Label>
        <Label Content="Output Scale" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="604,60,0,0" ></Label>
        <RadioButton GroupName="input" Name="rbtnInputCelc" Content="Celcius" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,105,0,0" Checked="Rbtn_Checked" ></RadioButton>
        <RadioButton GroupName="intpu" Name="rbtnInputFaren" Content="Farenheit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,145,0,0" Checked="Rbtn_Checked"></RadioButton>
        <RadioButton GroupName="input" Name="rbtnInputKelvin" Content="Kelvin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,180,0,0" Checked="Rbtn_Checked"></RadioButton>
        <RadioButton GroupName="output" Name="rbtnOutputCelc" Content="Celcius" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="615,105,0,0" Checked="Rbtn_Checked"></RadioButton>
        <RadioButton GroupName="output" Name="rbtnOutputFaren" Content="Farenheit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="615,145,0,0" Checked="Rbtn_Checked"></RadioButton>
        <RadioButton GroupName="output" Name="rbtnOutputKelvin" Content="Kelvin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="615,180,0,0" Checked="Rbtn_Checked"></RadioButton>
        <Label Content="Output" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="319,240,0,0"></Label>
        <Label Name="lblResult" Content="..." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0"></Label>
    </Grid>
</Window>
